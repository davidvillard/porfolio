---
import HTML from "./icons/HTML.astro";
import CSS from "./icons/CSS.astro";
import JavaScript from "./icons/JavaScript.astro";

const TAGS = {
  HTML: {
    name: "HTML",
    class: "bg-orange-700/30 text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-700/30 text-white",
    icon: CSS,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellow-400/30 text-white",
    icon: JavaScript,
  },
};

const PROJECTS = [
  {
    title: "Interstellar Fan Page - Webiste Project",
    description:
      "This is a fan page dedicated to the movie Interstellar. It was created as part of a project for an advanced web design course focused on Responsive Web Design. The website features multiple pages and boasts a responsive design tailored to different screen sizes.",
    link: "https://davidvillard.github.io/First-WebSite-Project-Responsive/v01/src/html/home.html",
    github: "https://github.com/davidvillard/First-WebSite-Project-Responsive",
    image: "/projects/svgl.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}>
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla del pryecto ${image}`}
      />
    </article>
  ))
}
