---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import BriefCase from "../components/icons/BriefCase.astro";
import ProjectIcon from "../components/icons/ProjectIcon.astro";
import Projects from "../components/Projects.astro";
import ButtonPills from "../components/ButtonPills.astro";
import CopyIcon from "../components/icons/Copy.astro";
import Skills from "../components/Skills.astro";
import SkillsIcon from "../components/icons/SkillsIcon.astro";
import UserIcon from "../components/icons/UserIcon.astro";
import AboutMe from "../components/AboutMe.astro";
---

<Layout
  title="Porfolio de davidvillard - Desarrollador FullStack - Galicia, España"
  description="Contrata a davidvillard."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32" id="top">
      <img
        class="rounded-full w-20 h-20 mb-4"
        src="/profile-pic.JPG"
        alt="david photo"
      />
      <h1
        class="text-white lg:text-5xl text-3xl md:text-4xl font-bold flex justify-center flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hola!, soy David <a
          href="https://www.linkedin.com/in/davidvillard/"
        ><div class="flex justify-center items-center">
          <Badge>Disponible para trabajar</Badge>
        </div></a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span> Apasionado por el Diseño Web en Formación.</span>
        <span class="text-yellow-200/90 flex items-center">
          Desarrollador Web Full Stack.
        </span>
        <span class="text-purple-400/90">  
          De Galicia, España.</span>
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.github.com/davidvillard">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="https://www.linkedin.com/in/davidvillard/">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="mailto:davidvillard6@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          davidvillard6@gmail.com
        </SocialPill>
        <ButtonPills>
          <CopyIcon />
          Copy
        </ButtonPills>

      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center ">
        <BriefCase class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2 class="text-4xl font-semibold mb-6 flex gap-x-3 items-center">
        <ProjectIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2 class="text-4xl font-semibold mb-6 flex gap-x-3 items-center">
        <UserIcon class="size-7" />
        Sobre Mí
      </h2>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="skills">
      <h2 class="text-4xl font-semibold mb-6 flex gap-x-3 items-center">
        <SkillsIcon class="size-7" />
        Skills
      </h2>
      <Skills />
    </SectionContainer>
  </main>
</Layout>
